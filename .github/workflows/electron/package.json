{
  "name": "revolutionary-wallpaper",
  "private": true,
  "version": "1.0.0",
  "description": "Revolutionary Quote Wallpaper Generator",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.revolutionary.wallpaper",
    "productName": "RevolutionaryWallpaper",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
